<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/personCard"
        android:clickable="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/txt_person_image_desc"
                android:minHeight="100dp" />

            <TextView
                android:id="@+id/lstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPerson"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:text="TextView" />

            <TextView
                android:id="@+id/lstGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPerson"
                android:layout_toEndOf="@id/lstName"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/lstDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lstName"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/lstStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lstDate"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/lstGender"
                android:text="TextView" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>