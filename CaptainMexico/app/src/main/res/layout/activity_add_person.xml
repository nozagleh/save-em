<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nozagleh.captainmexico.AddPerson">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imgBtn"
            android:layout_width="125dp"
            android:layout_height="123dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:contentDescription="Picture of the person"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgBtn" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintLeft_toLeftOf="@+id/lblName"
            app:layout_constraintTop_toBottomOf="@+id/lblName" />

        <TextView
            android:id="@+id/lblEyeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <EditText
            android:id="@+id/txtEyeColor"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Eye color"
            app:layout_constraintLeft_toLeftOf="@+id/lblEyeColor"
            app:layout_constraintTop_toBottomOf="@+id/lblEyeColor" />

        <TextView
            android:id="@+id/lblShoeSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="@+id/txtShoeSize"
            app:layout_constraintBaseline_toBaselineOf="@+id/lblEyeColor" />

        <EditText
            android:id="@+id/txtShoeSize"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtEyeColor"
            app:layout_constraintLeft_toRightOf="@+id/txtEyeColor" />

        <TextView
            android:id="@+id/lblSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEyeColor"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/spinnerSex"
            android:layout_width="208dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="@+id/lblSex"
            app:layout_constraintTop_toBottomOf="@+id/lblSex" />

        <TextView
            android:id="@+id/lblHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="@+id/spinnerSex"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerSex" />

        <EditText
            android:id="@+id/txtHeight"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toLeftOf="@+id/lblHeight"
            app:layout_constraintTop_toBottomOf="@+id/lblHeight" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Report Missing!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/lblHairColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="@+id/txtHairColor"
            tools:layout_editor_absoluteY="335dp" />

        <EditText
            android:id="@+id/txtHairColor"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Hair color"
            app:layout_constraintLeft_toRightOf="@+id/txtHeight"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtHeight" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
