<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nozagleh.captainmexico.AddPerson">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imgBtn"
            android:layout_width="125dp"
            android:layout_height="123dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:contentDescription="Picture of the person"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/lblFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_firstname"
            android:layout_marginStart="8dp"
            android:labelFor="@+id/txtFirstName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgBtn" />

        <EditText
            android:id="@+id/txtFirstName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="@+id/lblFirstName"
            app:layout_constraintTop_toBottomOf="@+id/lblFirstName" />

        <TextView
            android:id="@+id/lblLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lastname"
            android:labelFor="@+id/txtLastName"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFirstName" />

        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="@+id/lblLastName"
            app:layout_constraintTop_toBottomOf="@+id/lblLastName" />

        <TextView
            android:id="@+id/lblSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_sex"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLastName"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/spinnerSex"
            android:layout_width="160dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="@+id/lblSex"
            app:layout_constraintTop_toBottomOf="@+id/lblSex" />

        <TextView
            android:id="@+id/lblBirtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_birtdate"
            android:labelFor="@+id/txtBirthdate"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/txtFirstName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgBtn" />

        <EditText
            android:id="@+id/txtBirthdate"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/txtFirstName"
            app:layout_constraintTop_toTopOf="@id/txtFirstName"
            app:layout_constraintLeft_toRightOf="@id/txtFirstName" />

        <TextView
            android:id="@+id/lblNationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:labelFor="@+id/txtNationality"
            android:text="@string/txt_nationality"
            app:layout_constraintLeft_toRightOf="@id/txtLastName"
            app:layout_constraintTop_toBottomOf="@+id/txtBirthdate" />

        <EditText
            android:id="@+id/txtNationality"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@id/txtLastName"
            app:layout_constraintTop_toBottomOf="@+id/lblNationality" />

        <TextView
            android:id="@+id/lblHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_height"
            android:labelFor="@+id/txtHeight"
            app:layout_constraintLeft_toRightOf="@id/spinnerSex"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNationality" />

        <EditText
            android:id="@+id/txtHeight"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toRightOf="@+id/spinnerSex"
            app:layout_constraintTop_toBottomOf="@+id/lblHeight"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-1dp" />

        <TextView
            android:id="@+id/lblHairColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_haircolor"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:labelFor="@+id/txtHairColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerSex"
            tools:layout_editor_absoluteY="335dp" />

        <EditText
            android:id="@+id/txtHairColor"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblHairColor"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/lblWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_weight"
            android:layout_marginTop="8dp"
            android:labelFor="@+id/txtWeight"
            app:layout_constraintBaseline_toBaselineOf="@id/lblHairColor"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@id/txtHairColor"
            app:layout_constraintTop_toBottomOf="@id/txtHeight"
            tools:layout_editor_absoluteY="335dp" />

        <EditText
            android:id="@+id/txtWeight"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberSigned"
            app:layout_constraintStart_toEndOf="@id/txtHairColor"
            app:layout_constraintTop_toBottomOf="@id/lblHairColor"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/txt_btn_report_missing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
